$('#commentScore-<%= @comment.id %>').find('p').fadeIn(500, function(){
	$(this).replaceWith('<p><%= @comment.score %></p>');
});

$('.userKarma-<%= @comment.user.id %>').find('p').fadeIn(500, function() {
	$(this).replaceWith('<p><%= karma_title(@comment.user) %> <%= @comment.user.karma %>pts</p>');
});

$('#comment-<%= @comment.id %>').find('#downvote').fadeIn(500, function() {
	$(this).replaceWith(' <%= j render partial: "unvote_down", locals: { comment: @comment } %>');
});