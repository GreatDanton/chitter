
<h2 class="centered-text">Sign up</h2>


<div class="signup-centered">
<%= form_for(@user) do |f| %>

<%= render 'shared/error_messages' %>

<%= f.text_field :nickname, :placeholder => "Enter your desired nickname", class: "form-input" %>
<%= f.email_field :email, :placeholder => "Enter your email", class: "form-input" %>
<%= f.password_field :password, :placeholder => "Enter your password", class: "form-input" %>
<%= f.password_field :password_confirmation, :placeholder => "Confirm your password", class: "form-input" %>
<%= f.submit "Create an account", class: "button expand" %>
<%end%>

<div class="margin-top-50"><%= link_to "I already have an account", login_path %></div>

</div>


