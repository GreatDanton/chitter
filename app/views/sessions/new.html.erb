

<h2 class="centered-text"> Sign up </h2>
<div class="signup-centered">

<%= form_for(:session, url: login_path) do |f| %>
<%= f.text_field :nickname, :placeholder => "Nickname", class: "form-input" %>
<%= f.password_field :password, :placeholder => "Password", class: "form-input" %>
<%= f.submit "Log in", class: "button" %>

<%end%>

<div class="margin-top-50">
<p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
</div>