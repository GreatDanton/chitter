

<h2 class="centered-text"> Log in </h2>
<div class="signup-centered">

<%= form_for(:session, url: login_path) do |f| %>

<%= f.label :nickname %>
<%= f.text_field :nickname, :placeholder => "Nickname", class: "form-input" %>

<%= f.label :password %>
<%= f.password_field :password, :placeholder => "Password", class: "form-input" %>
<%= link_to "(forgot_password?)", new_password_reset_path %>

<div class="row"><%= f.label :remember_me, class: "inline" do %>
<%= f.check_box :remember_me, class: "checkbox" %><p>Remember me on this computer </p>
<% end %></div>

<%= f.submit "Log in", class: "button expand" %>

<%end%>

<div class="margin-top-50">
<p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
</div>